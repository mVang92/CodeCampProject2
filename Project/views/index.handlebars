{{!-- Trip discription cards --}}
<div class="row tripheader">
  <div class="col-sm-12 col-md-12 text-center">
    <h2 style="color:#c49e6b;">Our Trips</h2>
    <p>The Boundary Water one stop for Adventure, BWCA Adventure Tours offers the easiest way to gather information about BWCA
      outdoor activities and plan an amazing trip. We have most fun and best trips in the business!</p>
  </div>
</div>

<div class="container-fluid">
  {{!-- Card one --}}
  <div class="card-group tripcards">
    <div class="card">
      <img class="card-img-top" src="../images/hiking.jpg" alt="Card image cap">
      <div class="card-body scroll">
        <h5 class="card-title" id="hiking">Hiking Tours</h5>
        <p class="card-text"></p>
      </div>
      <div class="card-footer">
        <a href="/hiking" class="card-link">Plan a Trip</a>
      </div>
    </div>

    {{!-- Card two --}}
    <div class="card">
      <img class="card-img-top" src="../images/camping.jpg" alt="Card image cap">
      <div class="card-body scroll">
        <h5 class="card-title" id="camping">Camping</h5>
        <p class="card-text"></p>
      </div>
      <div class="card-footer">
        <a href="/camping" class="card-link" style="color:#c49e6b;">Plan a Trip</a>
      </div>
    </div>

    {{!-- Card three --}}
    <div class="card">
      <img class="card-img-top" src="../images/biking.jpg" alt="Card image cap">
      <div class="card-body scroll">
        <h5 class="card-title" id="mountainBiking">Mountain Biking</h5>
        <p class="card-text"></p>
      </div>
      <div class="card-footer">
        <a href="/mountain-biking" class="card-link" style="color:#c49e6b;">Plan a Trip</a>
      </div>
    </div>
  </div>
</div>

{{!-- Write Review Button --}}
<div class="row">
  <div class="col-md-12 text-center">
    <a href="/form"><button type="button" class="btn btn-lg" id="reviewButton">Write a Review</button></a>
  </div>
</div>

{{!-- Review Section --}}
<div class="container-fluid">
  <div class="row" id="hc-reviews">
    <div class="col-md-7 scroll">
      <h5>Reviews</h5>
      <hr>
      <ul id="review" class="list-group">
        {{#each bwaters}}
        <li class="reviewHbrs">
          Name:<span>{{this.firstName}}</span>
          <br>Comment:<div class= "edit" data-bwatersid="{{this.id}}">{{this.comments}}</div>}
          <br><a><button type="button" class="btn btn-dark updateReview" data-bwatersid="{{this.id}}">Edit</button></a>
          <a><button type="button" class="btn btn-danger deleteReview" data-bwatersid="{{this.id}}">X</button></a>
          <hr>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="col-md-5 ratings-bar">
        <h5>Total Review Ratings:</h5>
        <hr>
        <div id="viz"></div>
    </div>
  </div>  
</div>

