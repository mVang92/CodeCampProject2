{{!-- Jumbotron --}}
<div class="jumbotron jumbotron-fluid">
  <nav class="navbar navbar-dark">
    <a class="navbar-brand" href="/">
      <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">      BWCA
